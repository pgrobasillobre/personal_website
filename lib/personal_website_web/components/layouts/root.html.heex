  <!-- Script to toggle panel -->
  <script>
    (() => {
      const panel = document.getElementById('contact-panel');
      if (!panel) return;

      const triggers = () => Array.from(document.querySelectorAll('[data-contact-trigger]'));

      function openPanelFor(trigger) {
        const rect = trigger.getBoundingClientRect();
        const top = Math.round(rect.bottom + window.scrollY + 12);
        const left = Math.round(rect.left + window.scrollX + rect.width / 2 - panel.offsetWidth / 2);
        panel.style.top = `${top}px`;
        panel.style.left = `${Math.max(8, left)}px`;

        panel.classList.remove('hidden');
        requestAnimationFrame(() => {
          panel.classList.remove('opacity-0', 'translate-y-1');
        });

        triggers().forEach(t => t.setAttribute('aria-expanded', t === trigger ? 'true' : 'false'));
        panel.dataset.open = 'true';
        document.addEventListener('click', onDocClick, { capture: true });
        document.addEventListener('keydown', onKeyDown);
      }

      function closePanel() {
        panel.classList.add('opacity-0', 'translate-y-1');
        panel.addEventListener('transitionend', function onEnd(e) {
          if (e.propertyName !== 'opacity') return;
          panel.classList.add('hidden');
          panel.removeEventListener('transitionend', onEnd);
        });
        triggers().forEach(t => t.setAttribute('aria-expanded', 'false'));
        panel.dataset.open = 'false';
        document.removeEventListener('click', onDocClick, { capture: true });
        document.removeEventListener('keydown', onKeyDown);
      }

      function toggleFor(trigger) {
        if (panel.dataset.open === 'true') {
          closePanel();
        } else {
          openPanelFor(trigger);
        }
      }

      function onDocClick(e) {
        const isTrigger = e.target.closest('[data-contact-trigger]');
        const insidePanel = e.target.closest('#contact-panel');
        if (isTrigger) {
          e.preventDefault();
          toggleFor(isTrigger);
          return;
        }
        if (!insidePanel) closePanel();
      }

      function onKeyDown(e) {
        if (e.key === 'Escape') closePanel();
      }

      triggers().forEach(t => {
        t.addEventListener('click', (e) => {
          e.preventDefault();
          toggleFor(t);
        });
      });

      ['resize', 'scroll'].forEach(evt => {
        window.addEventListener(evt, () => {
          if (panel.dataset.open === 'true') {
            const owner = document.querySelector('[data-contact-trigger][aria-expanded="true"]');
            if (owner) openPanelFor(owner);
          }
        }, { passive: true });
      });
    })();
  </script>

